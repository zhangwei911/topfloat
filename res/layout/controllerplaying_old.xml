<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/view_holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:keepScreenOn="true"></RelativeLayout>

    <LinearLayout
        android:id="@+id/controller_holder"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"></LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/videonamefull_textView"
        android:textColor="#ff7b45"
        android:background="#9afcff"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:alpha="0.3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/msg_textView"
        android:textSize="40dp"
        android:textColor="#ff8f74"
        android:textStyle="bold|normal"
        android:layout_centerInParent="true" />

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/web_listView"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="50dp"
        style="@android:style/Widget.ListPopupWindow"
        android:listSelector="@drawable/circle"
        android:visibility="gone" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:id="@+id/web_list_imageButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/lightbluebuttonstyle"
        android:src="@drawable/list2"
        android:alpha="0.5"
        android:layout_marginLeft="5dp" />

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/web_full_imageButton"
        android:alpha="0.5"
        android:src="@drawable/full"
        android:layout_toLeftOf="@+id/web_list_imageButton"
        android:background="@drawable/lightbluebuttonstyle"
        android:scaleType="fitXY" />

</RelativeLayout>